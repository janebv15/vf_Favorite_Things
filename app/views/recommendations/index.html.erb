<div>
  <div>
    <h1>
      List of all recommendations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new recommendation
    </h2>

    <form action="/insert_recommendation" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
      
       <label for="category_id">Category</label>
<select id="category_id" name="category_id">
  <% @categories.each do |c| %>
    <option value="<%= c.id %>"><%= c.name %></option>
  <% end %>
</select>

      </div>

  <div>
    <label for="title_box">Name</label>
    <input type="text" id="title_box" name="query_name">
  </div>

  <div>
    <label for="body_box">Description</label>
    <input type="text" id="body_box" name="query_description">
  </div>

      <button>
        Create recommendation
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Category
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_recommendations.each do |a_recommendation| %>
      <tr>
        <td>
          <%= a_recommendation.id %>
        </td>

        <td>
          <%= a_recommendation.user_id %>
        </td>

        <td>
          <%= a_recommendation.category_id %>
        </td>

        <td>
          <%= a_recommendation.name %>
        </td>

        <td>
          <%= a_recommendation.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_recommendation.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_recommendation.updated_at) %> ago
        </td>

        <td>
          <a href="/recommendations/<%= a_recommendation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
