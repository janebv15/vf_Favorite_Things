<div>
  <div>
    <h1>
      Category #<%= @the_category.id %> details
    </h1>

    <div>
      <div>
        <a href="/categories">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_category/<%= @the_category.id %>">
          Delete category
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_category.name %>
      </dd>

      <dt>
        Favorite things count
      </dt>
      <dd>
        <%= @the_category.favorite_things_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_category.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_category.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit category
    </h2>

    <form action="/modify_category/<%= @the_category.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <textarea id="name_box" name="query_name"><%= @the_category.name %></textarea>
      </div>

      <div>
        <label for="favorite_things_count_box">
          Favorite things count
        </label>

        <input type="text" id="favorite_things_count_box" name="query_favorite_things_count" value="<%= @the_category.favorite_things_count %>">
      </div>

      <button>
        Update category
      </button>
    </form>
  </div>
</div>

<hr>
